<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_offer"
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:scaleType="center"
        android:src="@drawable/the_zoo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@id/iv_offer"
        app:layout_constraintStart_toStartOf="@id/iv_offer"
        app:layout_constraintTop_toBottomOf="@id/iv_offer" />


    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@id/iv_offer"
        app:layout_constraintStart_toStartOf="@id/iv_offer"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />


    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@id/iv_offer"
        app:layout_constraintStart_toStartOf="@id/iv_offer"
        app:layout_constraintTop_toBottomOf="@id/tv_brand_name" />

</androidx.constraintlayout.widget.ConstraintLayout>